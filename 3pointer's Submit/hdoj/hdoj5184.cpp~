#include <stdio.h>
#define M 1000000007

long long c[2000010];

int main()
{
    int n;
    int a, b;
    char ch;
    c[0] = 1;
    for (int i = 1; i <= 2000010; i++)
    {
        c[i] = i * c[i - 1];
        c[i] %= M;
    }
    while(scanf("%d", &n) != EOF)
    {
        getchar();
        a = 0;
        b = 0;
        while(scanf("%c", &ch) && ch != '\n')
        {
            if (ch == '(')
                a++;
            if (ch == ')')
                b++;
        }
        int m = n / 2;
        int p = m - b;
        int q = m - a;
        printf("%lld\n", c[p + q] * (p + 1 - q) / (c[q] * c[p + 1]));
    }
    return 0;
}
